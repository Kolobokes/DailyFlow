<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="dailyflow_encrypted_prefs.xml"/>
        <exclude domain="database" path="dailyflow_database"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Allow device transfer of user data -->
        <include domain="sharedpref" path="dailyflow_user_prefs.xml"/>
    </device-transfer>
</data-extraction-rules>
